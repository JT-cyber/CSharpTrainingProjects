        xmlns:local="clr-namespace:Barista_App"
        mc:Ignorable="d"
        Title="AddItemWindow" Height="1080" Width="1920"
        WindowStyle="None" WindowState="Maximized">
    <Grid>
        <Grid>
            <TextBlock Height="200" Width="900" Margin="0,0,0,800" Text="Item Type" FontSize="100" TextAlignment="Center" Name="ItemTypeTitle"/>
